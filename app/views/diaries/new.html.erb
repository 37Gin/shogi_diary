<div class="diary-content">
  <div class="diary-title">
  新規投稿ページ
  </div>

    <%= form_with model: @diary, url: diaries_path, local: true do |f| %>
    <div class="diary-form">
      <div class="field">
        <%= f.label "タイトル" %><br/>
        <%= f.text_field :title, class: "text-form" %>
      </div>
      <div class="field">
        <%= f.label "画像" %><br/>
        <%= f.file_field :image %>
      </div>
      <div class="field">
        <%= f.label "内容" %><br/>
        <%= f.text_area :content, class: "text-area" %>
      </div>
      <div class="field">
        <%= f.label "タグ" %><br/>
        <%= f.text_field :tag_name, class: "text-form" %><br/>
      </div>
      <div class="actions">
        <%= f.submit "投稿" %>
      </div>
    </div>
    <% end %>
</div>
