<!DOCTYPE html>
<html>
  <head>
    <title>ShogiDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="header-content">
      <b><a href="/" class="header-title">SHOGI DIARY</a></b>
      <div class="header-btns">
        <% if user_signed_in? %>
          <%= link_to "#{current_user.name}", user_path(current_user.id), class: "header-btn" %>
          <%= link_to "新規投稿",  new_diary_path, class: "header-btn" %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "header-btn" %>
        <% else %>
          <%= link_to '新規登録', new_user_registration_path, class: "header-btn" %>
          <%= link_to 'サインイン', new_user_session_path, class: "header-btn" %>
        <% end %>
      </div>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
